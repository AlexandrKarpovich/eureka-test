.header
  &__top
    background-color #f7f7f7
  &__inner
    height 144px
    display flex
    justify-content space-between
    align-items center

  .logo
    width 187px
    height 143px
    background-color #74cfb7
    &:hover
      background-color #079fc2
      transition: all .5s ease-in-out
    &__link
      width 100%
      height 100%
      display flex
      justify-content center
      align-items center
      &__icon
        width: 141px
        height: 82px

  .address
    &__title
      display block
      font-size 20px
      font-weight 500
      color #1f252d
    &__direction
      display block
      font-weight 300
      font-size 14px
      margin-top: 7px
  .phone
    &__number
      font-size 20px
      font-weight 500
      &__link
        color #1f252d
        text-decoration none
    &__working
      font-size 14px
      color #1f252d
      margin-top: 7px

  .btn
    width 222px
    height 48px
    border none
    border-radius 4px
    box-shadow 0px 4px 10px 0 rgba(116, 207, 183, 0.46)
    background-color #079fc2
    cursor pointer
    color #fff
    font-size 14px
    &:hover
      background-color: #74cfb7
      transition: all .3s ease-in-out

  &-nav
    &__list
      height 67px
      display flex
      justify-content space-between
      align-items: center
      list-style-type none
      text-transform: uppercase
      font-size: 13px
      font-weight: 500
    &__link
      text-decoration none
      color #404853
      &:hover
        color: #74cfb7
        transition: all .3s ease-in-out